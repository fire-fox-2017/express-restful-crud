<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo</title>
  </head>
  <body>
    <form action="/todos/update/<%= todo.id %>" method="post">
      <table>
        <tr>
          <td>Task</td>
          <td>:</td>
          <td><input type="text" name="title" value="<%=todo.title%>"></td>
        </tr>
        <tr>
          <td>Complete</td>
          <td>:</td>
          <td>        <% if(todo.is_complete == true){%>
                    <input type="checkbox" name="is_complete" value="true" checked>
                  <%}else{%>
                    <input type="checkbox" name="is_complete">
                  <%}%></td>
        </tr>
        <tr>
          <td>Id User</td>
          <td>:</td>
          <td><select name="id_user">
            <option value="<%= todo.id_user %>" selected><%= todo.id_user %></option>
          </select></td>
        </tr>
      </table>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
