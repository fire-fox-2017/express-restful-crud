<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo</title>
  </head>
  <body>
    <form action="/todo/create" method="post">
      <table>
        <tr>
          <td>Task</td>
          <td>:</td>
          <td><input type="text" name="title"></td>
        </tr>
        <tr>
          <td>Complete</td>
          <td>:</td>
          <td><input type="checkbox" name="is_complite" value="true"></td>
        </tr>
        <tr>
          <td>Id User</td>
          <td>:</td>
          <td><select name="id_user">
            <option disabled selected>Choice your id</option>
            <% if(users.length == null || users.length == 0){ %>
            <option value="0"><%= `user empty` %></option>
            <% }else{ users.forEach((user)=>{ %>
            <option value="<%= user.id %>"><%= user.email %></option>
          <%  }) } %>
          </select></td>
        </tr>
      </table>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
