<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <a href="/todos/add" class="btn-floating btn-flat waves-effect waves-light blue"><i class="material-icons">add</i></a>
            <hr>
            <table class="striped responsive-table">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            TASK
                        </th>
                        <th>
                            COMPLETED
                        </th>
                        <th>
                            USER
                        </th>
                        <th>
                            CREATED AT
                        </th>
                        <th>
                            ACTON
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% let i = 1; result.forEach(item=>{ %>
                        <tr>
                            <td>
                                <%= i++ %>
                            </td>
                            <td>
                                <%= item.task %>
                            </td>
                            <td>
                                <%= item.completed %>
                            </td>
                            <td>
                                <%= item.User.email %>
                            </td>
                            <td>
                                <%= helper.format_date(item.createdAt) %>
                            </td>
                            <td>
                                <a href="/todos/edit/<%= item.id %>" class="waves-effect waves-light btn"><i class="material-icons">edit</i></a> | <a href="/todos/delete/<%= item.id %>" class="btn red" onclick="return confirm('Are you sure you want to delete this item?');"><i class="material-icons">delete</i></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

    </div>
    </div>

    <% include ../partials/footer %>
